#include <tunables/global>

/usr/sbin/vsftpd {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/authentication>

  /dev/urandom               r,
  /etc/environment           r,
  /etc/fstab                 r,
  /etc/ftpusers              r,
  /etc/hosts.allow           r,
  /etc/hosts.deny            r,
  /etc/mtab                  r,
  /etc/shells                r,
  /etc/vsftpd.*              r,
  /etc/vsftpd/*              r,
  /@{PROC}/@{pid}/mounts     r,
  /usr/sbin/vsftpd           rmix,
  /{,var/}run/utmp           rk,
  /var/log/vsftpd.log        w,
  /var/log/xferlog           w,
  # anon chroots
  /                          r,
  /pub                       r,
  /pub/**                    r,
  @{HOMEDIRS}                r,
  @{HOME}/**                 rwl,
}
