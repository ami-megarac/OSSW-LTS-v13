/usr/bin/foo9 {
   allow change_profile -> @{LIBVIRT_RE}-fo?,
}

/usr/bin/foo10 {
   allow change_profile -> @{LIBVIRT_RE}-fo[ab],
}

/usr/bin/foo11 {
   allow change_profile -> @{LIBVIRT_RE}-fo[^ab],
}
