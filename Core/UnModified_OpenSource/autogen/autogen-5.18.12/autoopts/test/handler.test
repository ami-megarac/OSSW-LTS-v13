static void
doOptSixth(tOptions* pOptions, tOptDesc* pOptDesc)
{

    static char const * const names[4] = {
        "alpha",  "beta",   "gamma",  "omega"
    };
    /*
     * This function handles special invalid values for "pOptions"
     */
    optionSetMembers(pOptions, pOptDesc, names, 4);
}

